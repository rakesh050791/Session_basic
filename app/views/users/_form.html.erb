<%= form_tag "/sessions" do %> 

  <p>
  <%= label_tag :name %>:
  <%= text_field_tag :name %><br /> 
  </p>

  <p>
  <%= label_tag :email %>:
  <%= text_field_tag :email %><br /> 
  </p>

  <p>
  <%= label_tag :password %>:
  <%= password_field_tag :password %><br /> 
  </p>

  <p class="button"><%= submit_tag "Log In" %></p>

<% end %>